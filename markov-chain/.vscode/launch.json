    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train eng chain (go)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "train",
                "datasets/eng/alphabet.txt",
                "datasets/eng/J. K. Rowling - Harry Potter 1 - Sorcerer's Stone.txt",
                "temp/eng.chain.json"
            ]
        },

        {
            "name": "Verify eng chain (go) - garry potter",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "verify",
                "temp/eng.chain.json",
                "datasets/eng/J. K. Rowling - Harry Potter 1 - Sorcerer's Stone.txt",
            ]
        },
        {
            "name": "Verify eng chain (go) eng-1-ok",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "verify",
                "temp/eng.chain.json",
                "datasets/test/eng-ok-1.txt",
            ]
        },

        {
            "name": "Verify eng chain (go) eng-1-bad",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "verify",
                "temp/eng.chain.json",
                "datasets/test/eng-bad-1.txt",
            ]
        },

        {
            "name": "Train eng chain (python)",
            "type": "debugpy",
            "request": "launch",
            "program": "chain.py",
            "console": "integratedTerminal",
            "args": [
                "eng.txt",
                "J. K. Rowling - Harry Potter 1 - Sorcerer's Stone.txt",
                "eng.chain.json"
            ]
        }
    ]
}