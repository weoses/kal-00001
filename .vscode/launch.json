{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Storage-service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/storage-service/src",
            "cwd": "${workspaceFolder}/storage-service"
        },
        {
            "name": "OCR-service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/ocr-service/src",
            "cwd": "${workspaceFolder}/ocr-service",
            "env": {
                "LD_LIBRARY_PATH": "/opt/opencv-4.10.0/usr/local/lib",
                "PKG_CONFIG_PATH": "/opt/opencv-4.10.0/usr/local/lib/pkgconfig",
                "OCR_SERVICE_DEBUG": "true"
            }
        },
        {
            "name": "telegram-service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/telegram-service/src",
            "cwd": "${workspaceFolder}/telegram-service"
        }
    ]
}